<!DOCTYPE HTML>
<html>
{{> head}}

<body data-spy="scroll" data-target="#sidebar">
    <!-- ul>
        {{#annotations}}
        
        <li>{{this.name}}: {{this.structuredValue}}</li>
        {{! /each}}
        {{/annotations}}
    </uli -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div id="sidebar" class="hidden-print affix" role="complementary">
                    <ul class="nav nav-pills nav-stacked">
                      {{#resources}}
                          <li><a href="#res-{{displayName}}">{{#if displayName}}{{displayName}}{{/if}}{{#unless displayName}}{{relativeUri}}{{/unless}}</a></li>
                      {{/resources}}
                    </ul>
                </div>
            </div>

            <div class="col-md-9" role="main">
                <div class="page-header">
                    <h1>{{title}} API documentation{{#if version}} <small>version {{version}}</small>{{/if}}</h1>
                    <p>{{baseUri}}</p>

                    {{#documentation}}
                        <h3 id="{{uniqueId}}"><a href="#{{uniqueId}}">{{title}}</a></h3>
                        {{md content}}
                    {{/documentation}}
                </div>

                {{#resources}}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 id="res-{{displayName}}" class="panel-title">{{#if displayName}}{{displayName}}{{/if}}{{#unless displayName}}{{relativeUri}}{{/unless}}</h3>
                        </div>

                        <div class="panel-body">
                            {{#if description}}
                                <div class="top-resource-description">
                                    {{md description}}
                                </div>
                            {{/if}}
                            <div class="panel-group">{{> resource}}</div>
                        </div>
                    </div>
                {{/resources}}
            </div>
        </div>
    </div>
</body>
</html>
