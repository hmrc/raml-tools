<endpoint>
    <name>Fetch Employer Interests</name>
    <description>This endpoint fetches employer interests for the given tax year.</description>
    <section id="resource">
        <title>Resource</title>
        <resource>GET /employers-paye/{empRef}/{taxYear}/interest</resource>
    </section>
    <section id="path-parameters">
        <title>Path Parameters</title>
        <table>
            <headings>
                <cell>Name</cell>
                <cell>Type</cell>
                <cell>Example</cell>
                <cell>Description</cell>
            </headings>
            <rows>
                <row>
                    <cell>
                        <code>empRef</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>125/LS00015</code>
                    </cell>
                    <cell>The Employer Reference consists of Tax Office Number and Tax Office Reference, in format (Tax
                        Office Number)/(Tax Office Reference). Note that the empRef must be url encoded, for example,
                        125%2FLS00015
                    </cell>
                </row>
                <row>
                    <cell>
                        <code>taxYear</code>
                    </cell>
                    <cell>
                        <code>String</code>
                    </cell>
                    <cell>
                        <code>2014-15</code>
                    </cell>
                    <cell>The tax year for the interest being retrieved, in the format YYYY-YY. The supplied year values must be consecutive.
                        For example. 2012-13 or 2014-15.</cell>
                </row>
            </rows>
        </table>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>read:employers-paye</scope>
        </authorisation>
    </section>
    <section id="content-types">
        <title>Accept Header</title>
        <list>
            <item>
                <code>application/vnd.hmrc.1.0+json</code>
            </item>
        </list>
    </section>
    <section id="sample-response">
        <title>Response</title>
        <httpStatus>200 (OK)</httpStatus>
        <json>
            <![CDATA[
{
  "interests":
  [
